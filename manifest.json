{
  "manifest_version": 3,
  "name": "Command+Scroll Zoom",
  "version": "1.0.0",
  "description": "Zoom in/out pages with Command+Scroll",
  "permissions": ["tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "1024": "assets/logo.png"
  }
}
