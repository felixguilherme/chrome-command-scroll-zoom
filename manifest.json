{
  "manifest_version": 3,
  "name": "Command+Scroll Zoom",
  "version": "1.0.1",
  "description": "Smothly zoom in and out web pages using Cmd+Scroll",
  "homepage_url": "https://guilhermes.dev",
  "permissions": ["tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "1024": "assets/1024.png",
    "512": "assets/512.png",
    "256": "assets/256.png",
    "128": "assets/128.png",
    "64": "assets/64.png"
  }
}
